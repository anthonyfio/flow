  "name": "flow",
  "version": "0.0.1",
  "author": {
    "name": "Anthony Fiorani",
    "email": "anthony@anthonyfiorani.com",
    "url": "anthonyfiorani.com"
  },
  "license": "MIT",
  "dependencies": {
    "basscss": "^7.0.4",
    "basscss-base-reset": "^2.0.2",
    "basscss-base-typography": "^2.0.1",
    "basscss-borders": "^2.0.4",
    "basscss-btn": "^1.0.1",
    "basscss-color-base": "^2.0.0",
    "basscss-colors": "^2.0.0",
    "basscss-defaults": "^2.1.1",
    "basscss-grid": "^1.0.3",
    "basscss-utility-layout": "^2.0.3",
    "basscss-utility-typography": "^2.0.0",
    "basscss-white-space": "^1.1.2",
    "normalize.css": "^3.0.3",
    "page": "^1.6.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.1.1",
    "babel-cli": "^6.2.4",
    "babel-plugin-transform-member-expression-literals": "^6.2.4",
    "babel-plugin-transform-merge-sibling-variables": "^6.2.4",
    "babel-plugin-transform-minify-booleans": "^6.2.4",
    "babel-plugin-transform-property-literals": "^6.2.4",
    "babel-plugin-transform-remove-console": "^6.2.4",
    "babel-plugin-transform-remove-debugger": "^6.2.4",
    "babel-preset-es2015": "^6.2.4",
    "browser-sync": "^2.9.11",
    "browserify": "^11.2.0",
    "critical": "^0.6.0",
    "cssnano": "^3.3.1",
    "cssnext": "^1.8.4",
    "html-minifier": "^1.0.0",
    "imagemin-cli": "^1.0.0",
    "node-zopfli": "^1.4.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.2.0",
    "postcss-import": "^7.1.0",
    "sane": "^1.3.0",
    "uglify-js": "^2.5.0",
    "uncss": "^0.12.1"
  },
  "scripts": {
    "prestart": "npm run build:dev",
    "start": "parallelshell 'npm run watch:html' 'npm run watch:css' 'npm run watch:js' 'npm run server'",
    "prebuild:dev": "bash tools/dir-structure.sh",
    "build:dev": "parallelshell 'npm run build:html' 'npm run build:css' 'npm run build:js' 'npm run img'",
    "build:html": "cp src/*.html dist/",
    "watch:html": "sane 'npm run build:html' src --glob='**/*.html'",
    "build:css": "postcss -u postcss-import -u cssnext -u autoprefixer -o dist/css/main.css src/css/main.css",
    "watch:css": "sane 'npm run build:css' src/css --glob='**/*.css'",
    "build:js": "browserify src/js/main.js | babel -o dist/js/main.js --presets es2015",
    "watch:js": "sane 'npm run build:js' src/js --glob='**/*.js'",
    "img": "cp src/img/* dist/img/",
    "server": "browser-sync start --reload-delay 35 --server dist/ --files 'dist/*.html, dist/css/*.css, dist/js/*.js'",
    "prebuild:prod": "bash tools/dir-structure.sh",
    "build:prod": "npm run build:html && parallelshell 'npm run build:css:prod' 'npm run build:js:prod' 'npm run opti:img' && npm run build:html:prod",
    "build:html:prod": "bash tools/html-production.sh",
    "build:css:prod": "bash tools/css-production.sh",
    "build:js:prod": "bash tools/js-production.sh",
    "opti:img": "imagemin src/img/* dist/img/",
    "compress": "bash tools/gzip.sh",
    "preproduction": "npm run build:prod",
    "production": "npm run compress"
  }
}
